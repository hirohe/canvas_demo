{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "triple-equals": [
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "no-console": {
            "severity": "warning"
        },
        "quotemark": [
            true,
            "single"
        ],
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ],
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}
